package accessmodifier;   // ● 정의부 ●

public class Warrior {   // ■■■■■■■■ 접근 제한자 ■■■■■■■■
	// hp, mp, lv, atk, def, exp, name;
	
	// 선언
	public String name;   // 아이디
	public int hp;		  // 체력
	public int mp;		  // 마나
	public int lv;		  // 레벨
	public int atk;		  // 공격력
	public int def;		  // 방어력
	public int exp;		  // 경험치
	
	
	// 생성자 (1. 클래스 이름과 동일 2.리턴 자료형 없음)
	public Warrior(String n) {
		name = n;
		hp = 20;
		mp = 10;
		lv = 1;
		atk = 3;
		def = 0;
		exp = 0;
		
		System.out.println("전사 생성 완료!");
		System.out.println("아이디 : " + name +
						   ", 체력 : " + hp +
						   ", 마나 : " + mp +
						   ", 레벨 : " + lv +
						   ", 공격력 : " + atk +
						   ", 방어력 : " + def +
						   ", 경험치 : " + exp);
 			
	}
	
	// hunt 메서드 (실행시 사냥. 체력 -2/ 경험치 +10)
	public void hunt() {
		hp -= 2;
		exp += 10;
		System.out.println("사냥 결과 체력이 " + hp + "가 되었고, 누적 경험치는 " + exp + "입니다.");
	}
	
}
