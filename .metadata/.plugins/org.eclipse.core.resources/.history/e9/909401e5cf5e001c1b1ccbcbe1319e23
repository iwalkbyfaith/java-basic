package interaction;

public class Seller {
	
	private int money;
	private int mango;
	private int apple;
	
	
	public Seller(int mango, int apple) {
		this.money = 0;
		this.mango = mango;
		this.apple = apple;
	}
	
	
	public void sellMango(int mango) {
		this.mango -= mango;
		this.money += mango * 1000;
	}
	
	public void sellApple(int apple) {
		this.apple -= apple;
		this.money += apple * 2000;
	}

}
