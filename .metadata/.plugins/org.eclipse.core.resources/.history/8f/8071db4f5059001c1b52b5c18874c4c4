package constructor;

public class Main01_P204 {
	public static void main(String[] args) {
		// 자동차 한 대를 만들어주세요.
		// 연료량은 100
		// 속도는 0
		// 주인은 본인이름
		
		Car c1 = new Car();
		c1.gas = 100;
		c1.speed = 0;
		c1.owner = "고다은";
		
		
		// 차를 뽑자마자 먼저 상태 확인
		c1.getInfo();
		
		// 여기서 엑셀을 두 번 밟은 후 상태 다시 확인
		c1.accelSpeed();
		c1.accelSpeed();
		c1.getInfo();
		
		// 브레이크 밟고 상태 확인
		c1.breakSpeed();
		c1.getInfo();		
	}
}
