package game.interaction;

// 클래스 트롤
public class Troll {
	
	private int hp;
	private int atk;
	private int def;
	
	// 생성자 트롤
	public Troll() {
		this.hp = 10;
		this.atk = 4;
		this.def = 3;
	}
	
	// 매서드 doBattle
	public void doBattle(int uAtk) {
		hp = (hp + def) - uAtk;
		if(hp <= 0) {
		hp = 0;
		}
		System.out.println("트롤의 남은 체력 : " + hp);
	}
	
	// 반복문은 break;를 쓰고 메서드는 return;으로 처리해야한다.
	// void인 경우 return; 처리하면 메서드가 끝난다.

	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getAtk() {
		return atk;
	}

	public void setAtk(int atk) {
		this.atk = atk;
	}

	public int getDef() {
		return def;
	}

	public void setDef(int def) {
		this.def = def;
	}

	// getter와 setter 생성
	
	
	
	
}
