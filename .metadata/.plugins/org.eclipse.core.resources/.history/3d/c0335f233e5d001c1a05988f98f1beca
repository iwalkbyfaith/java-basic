package game.inheritance;   // ● 정의부 ●

public class Commoner {

	private int level;   
	private int hp;
	private int id;
	private int mp;
	
	
	// 생성자로 데이터를 초기화할 수 있다.
	public Commoner(int id) {
		level = 1;
		hp = 20;
		mp = 10;
		this.id = id;
	}
	
	// getInfo 현재상태
	public void getInfo() {
		System.out.println("캐릭터 " + id + "가 생성되었습니다.");
		System.out.println("레벨 : " + level + ", 체력 : " + hp + ", 마나 : " + mp);
	}
	
	
	
}
