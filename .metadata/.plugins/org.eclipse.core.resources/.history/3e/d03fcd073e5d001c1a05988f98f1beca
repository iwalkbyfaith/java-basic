package game.inheritance;

public class Commoner {

	private int level;
	private int hp;
	private int id;
	private int mp;
	
	public Commoner(int id) {
		
		level = 1;
		hp = 20;
		mp = 10;
		this.id = id;
		
	}
	
	public void getInfo() {
		System.out.println("캐릭터 " + id + "가 생성되었습니다.");
		System.out.println("레벨 : " + level + ", 체력 : " + hp + ", 마나 : " + mp);
	}
	
	
	
}
