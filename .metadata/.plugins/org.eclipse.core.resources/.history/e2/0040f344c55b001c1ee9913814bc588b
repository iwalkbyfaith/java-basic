package accessmodifier;   // ● 정의부 ●

public class Warrior {
	// hp, mp, lv, atk, def, exp, name;
	
	// 선언
	public String name;   // 이름
	public int hp;		  // 체력
	public int mp;		  // 마나
	public int lv;		  // 레벨
	public int atk;		  // 공격력
	public int def;		  // 방어력
	public int exp;		  // 경험치
	
	
	// 생성자
	public Warrior(String n) {
		name = n;
		hp = 20;
		mp = 10;
		lv = 1;
		atk = 3;
		def = 0;
		exp = 0;
		
		System.out.println("아이디 : " + name +
						   ", 체력 : " + hp +
						   ", 마나 : " + mp +
						   ", 레벨 : " + lv +
						   ", 공격력 : " + atk +
						   ", 방어력 : " + def +
						   ", 경험치 : " + exp);
 			
	}
	
}
