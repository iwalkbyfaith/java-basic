package heapmemory;  // 문자열에서 처리하는 경우(특수)

public class Stringcomparison {
	public static void main(String[] args) {
		// 문자열은 같은 문자로 저장시 같은 주소를 공유합니다. (애초에 변경 자체가 안되니까 같은 주소를 줘도 상관 없는 것.)
		String str1 = "Hello";
		String str2 = "Hello";
		System.out.println(str1);
		System.out.println(str2);
		
		String str3 = "Hallo";
		
	
		
		// 일반 변수의 배정 값 조회시 .hashCode()를 씁니다.
		// 대략적인 주소값을 볼 수 있음
		System.out.println(str1.hashCode());
		System.out.println(str2.hashCode());
		System.out.println(str3.hashCode());
		// 주소가 똑같음.
			// 문자열은 같은 값이면 주소를 돌려씀.
			// 왜냐하면 문자열은 일부분만 변경할 수 없음.
		//	str1[0] = "Q";   
		// The type of the expression must be an array type but it resolved to String
			
		// str1 == str2와 같이 비교하는 것은 문자열 비교가 아니고 '주소비교'입니다.
		System.out.println(str1 == str2);
		System.out.println(str1 == new String("Hello"));
			// 문자가 똑같아서 뜨는게 아니라
	}
}
