package game.polymorphism;

//모든 사냥감의 뼈대가 되는 클래스
public class Monster {
	
	// 변수
	private String name;  // 몬스터 종류
	private int hp;       // 체력
	private int mp;       // 마나
	private int atk;      // 공격력
	
	
	// 생성자
	public Monster(String name, int hp, int mp, int atk) {
		this.name = name;
		this.hp = hp;
		this.mp = mp;
		this.atk = atk;
	}

}
