package game.accessmodifier;

public class Main02 {
	public static void main(String[] args) {
		
		Warrior w1 = new Warrior("초보전사");
		
		// 최초 생성 후 조회
		w1.getInfo();
		
		// 더블어택 두 번
		w1.doubleAttack();
		w1.doubleAttack();
		w1.getInfo();
		
		// 사냥
		w1.hunt();
		w1.getInfo();
		
		// 더블어택 한 번
		w1.doubleAttack();
		w1.getInfo();
		
		// 체력회복 물약 마시기
		// w1.drink();
		// w1.getInfo();
	}

}
